<h1>Listing followings</h1>

<table>
  <tr>
    <th>Follower</th>
    <th>Followee</th>
  </tr>

<% @followings.each do |following| %>
  <tr>
    <td><%=h following.follower_id %></td>
    <td><%=h following.followee_id %></td>
    <td><%= link_to 'Show', following %></td>
    <td><%= link_to 'Edit', edit_following_path(following) %></td>
    <td><%= link_to 'Destroy', following, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New following', new_following_path %>