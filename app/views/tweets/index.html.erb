<% if logged_in? %>
  <% if current_user == @user %>
    <% form_for(@tweet) do |f| %>
      <%= f.error_messages %>
    
      <p>
        <%= f.label :content, "What's happening?" %><br />
        <%= f.text_field :content %>
      </p>
      <p>
        <%= f.submit 'update' %>
      </p>
    <% end %>
  <% else %>
    <%= link_to "follow", stalkings_path(:stalking => {:stalkee_id => @user.id}), :method => :post if @user %>
  <% end %>
<% end %>


<h1>Listing tweets</h1>

<table>
  <tr>
    <th>User</th>
    <th>Content</th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%=h tweet.user_id %></td>
    <td><%=h tweet.content %></td>
    <td><%= link_to 'Show', tweet %></td>
    <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
    <td><%= link_to 'Destroy', tweet, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tweet', new_tweet_path %>
